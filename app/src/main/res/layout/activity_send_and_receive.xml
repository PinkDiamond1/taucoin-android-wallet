    <RelativeLayout
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.v4.view.ViewPager
            android:id="@+id/ad_paper"
            android:layout_width="match_parent"
            android:layout_height="100dp">

        </android.support.v4.view.ViewPager>

        <LinearLayout
            android:layout_alignBottom="@id/ad_paper"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/dot1"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@mipmap/round_w"/>
            <ImageView
                android:id="@+id/dot2"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@mipmap/round_w"/>
            <ImageView
                android:id="@+id/dot3"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@mipmap/round_w"/>
        </LinearLayout>
    </RelativeLayout>

    <FrameLayout
        android:id="@+id/fragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
         android:layout_weight="1"/>

    <RadioGroup
        android:id="@+id/tab_radiogroup"
        android:layout_width="match_parent"
        android:layout_height="60dp"

        android:orientation="horizontal"
        android:background="@color/write"
        android:gravity="center">

        <RadioButton
            android:id="@+id/send"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@drawable/selector_tab_send"
            android:button="@null"
            android:gravity="center"
            android:text="Send"
            android:textColor="@drawable/selector_tab_text_color"/>
        <RadioButton
            android:checked="true"
            android:id="@+id/manage"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@drawable/selector_tab_manage"
            android:button="@null"
            android:gravity="center"
            android:text="Manage"
            android:textColor="@drawable/selector_tab_text_color"/>
        <RadioButton
            android:id="@+id/receive"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@drawable/selector_tab_receive"
            android:button="@null"
            android:gravity="center"
            android:text="Receive"
            android:textColor="@drawable/selector_tab_text_color"/>


    </RadioGroup>


