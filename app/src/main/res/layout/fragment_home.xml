<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white"
    android:orientation="vertical">

    <io.taucoin.android.wallet.widget.ToolbarView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:titleText="@string/main_home_title" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_header_pic"
            android:layout_width="@dimen/dimen_size_60"
            android:layout_height="@dimen/dimen_size_60"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dimen_size_60"
            android:src="@mipmap/logo"
            app:civ_border_color="@color/color_main_line"
            app:civ_border_width="0.6dp" />

        <TextView
            android:id="@+id/tv_nick"
            style="@style/style_normal_grey"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_header_pic"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:hint="@string/common_no_login"
            android:textColorHint="@color/color_grey" />

        <TextView
            android:id="@+id/tv_balance"
            style="@style/style_tau_black"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_below="@id/tv_nick"
            android:layout_centerHorizontal="true"
            android:gravity="center_vertical"
            android:textColorHint="@color/color_black" />
    </RelativeLayout>

    <TextView
        style="@style/style_big_yellow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:gravity="center_horizontal"
        android:lineSpacingExtra="10dp"
        android:text="@string/main_mining_tips" />

</LinearLayout>