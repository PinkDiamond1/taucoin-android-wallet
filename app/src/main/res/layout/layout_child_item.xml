<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF"
    android:padding="10dp">

    <!--<TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Status"
        android:textSize="16sp"/>-->
    <TextView
        android:textIsSelectable="true"
        android:textColor="#000000"
        android:id="@+id/tx_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" "
        android:textSize="14sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="To Address"
        android:textSize="16sp"/>
    <TextView
        android:textIsSelectable="true"
        android:textColor="#F09225"
        android:id="@+id/tx_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" "
        android:textSize="14sp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Transation ID"
        android:textSize="16sp"/>
    <TextView
        android:textColor="#000000"
        android:id="@+id/tx_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="14sp"/>
    <TextView
        android:visibility="gone"
        android:textIsSelectable="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Transation Fee"
        android:textSize="16sp"/>
    <TextView
        android:visibility="gone"
        android:textColor="#000000"
        android:id="@+id/tx_fee"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="14sp"/>
    <!--<TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Block Height"
        android:textSize="16sp"/>
    <TextView
        android:textColor="#000000"
        android:id="@+id/tx_block_height"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="14sp"/>-->

</LinearLayout>
